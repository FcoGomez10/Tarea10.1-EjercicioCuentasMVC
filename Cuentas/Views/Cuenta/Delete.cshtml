@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="mb-4 text-danger">Eliminar Cuenta</h1>

<div class="alert alert-danger mb-4" role="alert">
    <h4 class="alert-heading">¡Atención! Estás a punto de eliminar esta cuenta.</h4>
    <p class="mb-0">¿Estás seguro de que deseas eliminar permanentemente?</p>
</div>

<div class="card shadow-sm mb-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Detalles de la Cuenta a Eliminar</h4>
    </div>
    <div class="card-body">

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="align-middle" style="width: 30%;">Cuenta</th>
                    <td>@Html.DisplayFor(model => model.numero)</td>
                </tr>
                <tr>
                    <th class="align-middle">Descripción</th>
                    <td>@Html.DisplayFor(model => model.descripcion)</td>
                </tr>
                <tr>
                    <th class="align-middle">Créditos</th>
                    <td>@Html.DisplayFor(model => model.creditos)</td>
                </tr>
                <tr>
                    <th class="align-middle">Débitos</th>
                    <td>@Html.DisplayFor(model => model.debitos)</td>
                </tr>
                <tr class="table-danger">
                    <th class="align-middle">Balance</th>
                    <td>@Html.DisplayFor(model => model.balance)</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />

        <button type="submit" class="btn btn-danger">
            Confirmar
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
             Regresar a la Lista
        </a>
    </form>
</div>