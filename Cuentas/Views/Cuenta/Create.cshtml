@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Crear";
}

<h1 class="mb-4">Crear Cuenta</h1>

<form asp-action="Create" class="needs-validation" novalidate>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Introduzca los Datos de la Nueva Cuenta</h4>
        </div>
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th class="align-middle" style="width: 30%;">Cuenta </th>
                        <td>
                            <input asp-for="numero" class="form-control" />
                            <span asp-validation-for="numero" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">Descripción </th>
                        <td>
                            <input asp-for="descripcion" class="form-control" />
                            <span asp-validation-for="descripcion" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">Créditos </th>
                        <td>
                            <input asp-for="creditos" class="form-control" />
                            <span asp-validation-for="creditos" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">Débito </th>
                        <td>
                            <input asp-for="debitos" class="form-control" />
                            <span asp-validation-for="debitos" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="table-success">
                        <th class="align-middle">Balance </th>
                        <td>
                            <input asp-for="balance" class="form-control" disabled/>
                            <span asp-validation-for="balance" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">
            <i class="btn-success"></i> Crear Cuenta
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="btn-secondary"></i> Regresar a la Lista
        </a>
    </div>
</form>
@section Scripts {
    @{
        // Asegura que las validaciones del lado del cliente funcionen
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}