@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Editar";
}

<h1 class="mb-4">Editar Cuenta</h1>

<form asp-action="Edit" class="needs-validation" novalidate>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Modificar Información de la Cuenta</h4>
        </div>
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <input type="hidden" asp-for="id" />

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th class="align-middle" style="width: 30%;">Cuenta</th>
                        <td>
                            <input asp-for="numero" class="form-control" disabled/>
                            <span asp-validation-for="numero" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">Descripción</th>
                        <td>
                            <input asp-for="descripcion" class="form-control"/>
                            <span asp-validation-for="descripcion" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">Crédito</th>
                        <td>
                            <input asp-for="creditos" class="form-control" disabled/>
                            <span asp-validation-for="creditos" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">Débito</th>
                        <td>
                            <input asp-for="debitos" class="form-control" disabled/>
                            <span asp-validation-for="debitos" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="table-light">
                        <th class="align-middle">Balance</th>
                        <td>
                            <input asp-for="balance" class="form-control" disabled/>
                            <span asp-validation-for="balance" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    <div class="mt-3">

        <button type="submit" class="btn btn-primary" disabled="@(Model.balance < 0)"
            <i class="btn-primary"></i> Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="btn-secondary"></i> Regresar a la Lista
        </a>
    </div>
</form>
@section Scripts {
    @{
        // Asegura que las validaciones del lado del cliente funcionen
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

