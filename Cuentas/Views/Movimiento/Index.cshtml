@model IEnumerable<Cuentas.Models.Movimiento>

@{
    ViewData["Title"] = "Listado de Movimientos";
}

<h1 class="mb-4">Listado de Movimientos</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Historial de Movimientos</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="fas fa-plus-circle"></i> Nuevo Movimiento
        </a>
    </div>

    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="alert alert-info m-3" role="alert">
                No hay movimientos registrados.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                            <th>@Html.DisplayNameFor(model => model.Concepto)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.Monto)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.IdCuenta)</th>
                            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Concepto)</td>
                                <td class="text-end">@Html.DisplayFor(modelItem => item.Monto)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.IdCuenta)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                                <td class="text-center" style="width: 300px;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">
                                     Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success me-1" title="Detalles">
                                     Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                     Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>