@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Detalles del Movimiento";
}

<h1 class="mb-4">Detalles del Movimiento</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-warning text-white">
        <h4 class="mb-0">Información del Movimiento</h4>
    </div>
    <div class="card-body">

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th style="width: 30%;">
                        @Html.DisplayNameFor(model => model.IdCuenta)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IdCuenta)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Tipo)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Concepto)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Concepto)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Monto)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Monto)
                    </td>
                </tr>
                <tr class="table-light">
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Fecha)
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
       Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
       Regresar a la Lista
    </a>
</div>