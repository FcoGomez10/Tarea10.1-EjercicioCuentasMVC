@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Crear Movimiento";
}

<h1 class="mb-4">Crear Movimiento</h1>

<form asp-action="Create" class="needs-validation" novalidate>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Registrar Nuevo Movimiento</h4>
        </div>
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                    </tr>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Tipo"></label>
                        </th>
                        <td>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Concepto"></label>
                        </th>
                        <td>
                            <input asp-for="Concepto" class="form-control" />
                            <span asp-validation-for="Concepto" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Monto"></label>
                        </th>
                        <td>
                            <input asp-for="Monto" class="form-control" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </td>
                    </tr>
                    <th class="align-middle" style="width: 30%;">
                        <label asp-for="IdCuenta"></label>
                    </th>
                    <td>
                        <input asp-for="IdCuenta" class="form-control" />
                        <span asp-validation-for="IdCuenta" class="text-danger"></span>
                    </td>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Fecha"></label>
                        </th>
                        <td>
                            <input asp-for="Fecha" type="date" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

    <div class="mt-3">
        <button type="submit" value="Create" class="btn btn-primary">
            <i class="fas fa-save"></i> Guardar Movimiento
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fas fa-list"></i> Regresar a la Lista
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}