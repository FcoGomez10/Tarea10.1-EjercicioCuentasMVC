@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Editar Movimiento";
}

<h1 class="mb-4">Editar Movimiento</h1>

<form asp-action="Edit" class="needs-validation" novalidate>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Modificar Detalles del Movimiento</h4>
        </div>
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th class="align-middle" style="width: 30%;">
                            <label asp-for="IdCuenta"></label>
                        </th>
                        <td>
                            <input asp-for="IdCuenta" class="form-control" disabled />
                            <span asp-validation-for="IdCuenta" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Tipo"></label>
                        </th>
                        <td>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Concepto"></label>
                        </th>
                        <td>
                            <input asp-for="Concepto" class="form-control" />
                            <span asp-validation-for="Concepto" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="align-middle">
                            <label asp-for="Monto"></label>
                        </th>
                        <td>
                            <input asp-for="Monto" class="form-control" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="table-light">
                        <th class="align-middle">
                            <label asp-for="Fecha"></label>
                        </th>
                        <td>
                            <input asp-for="Fecha" type="date" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

    <div class="mt-3">
        <button type="submit" value="Save" class="btn btn-primary">
           Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
           Regresar a la Lista
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}