@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Eliminar Movimiento";
}

<h1 class="mb-4 text-danger">Eliminar Movimiento</h1>

<div class="alert alert-danger mb-4" role="alert">
    <h4 class="alert-heading">¡Advertencia! Confirmación de Eliminación.</h4>
    <p class="mb-0">Estás a punto de eliminar el registro de este movimiento. ¿Estás absolutamente seguro de que deseas continuar?</p>
</div>

<div class="card shadow-sm mb-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Detalles del Movimiento a Eliminar</h4>
    </div>
    <div class="card-body">

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="align-middle" style="width: 30%;">
                        @Html.DisplayNameFor(model => model.IdCuenta)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IdCuenta)
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Tipo)
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Concepto)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Concepto)
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Monto)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Monto)
                    </td>
                </tr>
                <tr class="table-danger">
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Fecha)
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Confirmar Eliminación
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fas fa-list"></i> Regresar a la Lista
        </a>
    </form>
</div>